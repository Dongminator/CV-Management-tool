application: comp3001-team-f
version: 1
runtime: python27
api_version: 1
threadsafe: true

# Handler
handlers:
# TODO: static handler here
- url: /(favicon\.ico)
  mime_type: image/png
  static_files: static/\1
  upload: static/favicon\.ico
    
- url: /(robots\.txt)
  static_files: static/\1
  upload: static/robots\.txt

- url: /(img|css)/(.*)
  static_files: static/\1/\2
  upload: static/(img|css)/(.*)

# TODO: dynamic handler here
- url: /.*
  script: main.app
  secure: always

# Libraries
libraries:
- name: jinja2
  version: latest
- name: markupsafe
  version: latest 
- name: setuptools
  version: latest
- name: lxml
  version: latest
  
# Skip upload file
skip_files:
- ^(.*/)?#.*#
- ^(.*/)?.*~
- ^(.*/)?.*sh
- ^(.*/)?.*\.py[co]
- ^(.*/)?.*/RCS/.*
- ^(.*/)?\..*
- ^(.*/)?.*\.bak$
- ^(.*/)?.*\.template$
- Testing
     

  