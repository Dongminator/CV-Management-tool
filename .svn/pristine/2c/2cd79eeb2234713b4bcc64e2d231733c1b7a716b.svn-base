<!--adfasdfasdf-->
.tooltipcontainer {
    position: relative;
}

.tooltip {
    display: none;
    position: absolute;
    color:#C0C0C0; 
    font-weight:normal; 
    text-transform:lowercase
    /* More positioning, height, width, etc */
}

a:hover .tooltip {
    display: block;
}

textarea
{
	width:90%;
}

#cv_cat_1, #cv_cat_2, #cv_cat_3, #cat_1, #cat_2, #cat_3
{
	padding:5px;	
}

.currentcat, .cvcategory {
	border-radius: 3px;
	border: 1px solid gray;
	margin-bottom: 7px;
}

.cvcategory {
	background-color: #8FBC8F;
}

.currentcat {
	background-color: #BCD7BC;
}

.category_title {
	line-height: 0.7em;
	font-size: 13pt;
}

#cv_sp .hidable {
	border-radius: 2px;
	margin: 5px;
	padding-left: 5px; 
	display: block;
	background-color: #BEC4C4;
	width: 400px;
}

#full .hidable {
	border-radius: 2px;
	margin: 5px;
	padding-left: 5px; 
	display: block;
	background-color: #BEC4C4;
	width: 300px;
}


.hide {
	display: block;
	line-break: 0.7em;
	font-size: 12pt;
}

#cvlist li {min-height:22px; line-height:22px;}
#cvlist a { text-align: left; line-height:20px; height:20px; font-size:12px; btext-shadow:1px 1px 1px white;}
#cvlist a ins {height:20px; width:20px; background-position:-56px -17px;}

#dialog-form label, input { display:block; }
#dialog-form body { font-size: 62.5%; }
input.text { margin-bottom:12px; width:95%; padding: .4em; }
fieldset { padding:0; border:0; margin-top:25px; }
h1 { font-size: 1.2em; margin: .6em 0; }
