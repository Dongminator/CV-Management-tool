<!doctype html>
<html >
<head>
  <meta charset="utf-8">
  <title>CV Management Tool</title>
  <meta name="author" content="COMP3001 Team F">
  <link rel="stylesheet" href="/static/css/style_server.css">
</head>

<body>
  <header>
    <h1><a href="/">CV MANAGEMENT TOOL</a></h1>
  </header>
  <div role="main" class="container" style="margin-bottom: 2em;">
	{% if logged_in %}
    	<p>You're logged in already.</p>
    	<a href="{{ url_for('homepage') }}" class="btn">My profile</a>
    	<a href="/logout" class="btn">logout</a>
  	{% else %}
		<p>Please login with one of these service:</p>
	    <a href="/auth/google" class="btn">Google</a>
	    <a href="/auth/facebook" class="btn">Facebook</a>
	    <a href="/auth/twitter" class="btn">Twitter</a>
	    <a href="/auth/linkedin" class="btn">LinkedIn</a>
	    <a href="/auth/windows_live" class="btn">Windows Live</a>
   {% endif %}
   </div>
   
</body>
</html>
