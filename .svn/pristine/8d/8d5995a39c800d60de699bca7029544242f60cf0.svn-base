/* tags */

html, body
{
	font-family:Arial;
	margin:0;
}

fieldset { 
	padding:0; 
	border:0; 
	margin-top:25px; 
}

textarea
{
	width:90%;
}

ul 
{
	list-style-type:none;
	margin:0;
	padding:0;
	
}

select
{
	border-radius: 2px;
	border: #C0C0C0;
}

input .text 
{ 
	margin-bottom:12px; 
	width:95%; 
	padding: .4em; 
}

h1 { 
	font-size: 1.2em; 
	margin: .6em 0; 
}

p
{
	display: block;
	margin-left:0.2cm;
}

a:hover .tooltip {
    display: block;
}

/* classes */
.hrz
{
	float:left;
}


.hrz a:link,a:visited
{
	display:block;
	width:120px;
	font-weight:bold;
	color:#FFFFFF;
	background-color:#D0D0D0;
	text-align:center;
	padding:0px;
	text-decoration:none;
	text-transform:uppercase;
}

.profile1
{
	height:30%;
}

.profile2
{
	height:70%;
}

.cvlist1
{
	height:70%;
}

.cvlist2
{
	height:30%;
}

.cv1
{
	height:650px;
	width:55%;
	float:left
}

.cv2
{
	height:650px;
	width:75%;
	float:left	
}

.full1
{
	height:650px;
	width:28%;
	float:left;
}

.full2
{
	height:650px;
	width:10%;
	float:left
}

.title
{
	position:absolute;
	height:23px;
	left:1px;
	right:0;
	top:1px;
	background-color:#D0D0D0;
	font-weight:bold;
	color:white;
	text-align:left;
}

.top{
	width:100%;
	text-align:center;
	margin-top:10px;
}

.work_sp{
	position:absolute;
	top:24px;
	bottom:0;
	right:0;
	left:1px;
	border-left: 1px solid #C0C0C0;
	overflow-y:auto;
}

.tooltipcontainer {
    position: relative;
}

.tooltip {
    display: none;
    position: absolute;
    color:#C0C0C0; 
    font-weight:normal; 
    text-transform:lowercase
    /* More positioning, height, width, etc */
}

.currentcat, .cvcategory {
	border-radius: 3px;
	border: 1px solid #C0C0C0;
	margin-bottom: 7px;
}

.cvcategory {
	
}

.currentcat {
	
}

.category_title {
	line-height: 0.7em;
	font-size: 13pt;
}

.hide {
	display: block;
	line-break: 0.7em;
	font-size: 12pt;
}

/* ids */
#container
{
	width:100%;
	height:100%;
	font-family:Arial;
	border: 1px solid #C0C0C0
}

#footer
{
	clear: both;
	position: relative;
	text-align: center;	
	background-color: #D0D0D0;
}

#main_title
{
	position: relative;
	background-color:#D0D0D0;
	text-align:left;
}

#navigation
{
	position:absolute;
	background-color:#C0C0C0;
	float: right;
	top:30px;
	right:0;
}

#workspace
{
	position:relative;
}

#info
{
	width:17%;
	height:650px;
	float:left	
}

#profile
{
	position:relative;
}

#profile_sp
{
}

#cvlist
{
	position:relative;
}

#cvlist_sp{	
}

#cv
{
	position:relative;
}

#cv_sp
{
}

#full
{
	position:relative;
}

#full_sp
{
}

#cv_cat_1, #cv_cat_2, #cv_cat_3, #cat_1, #cat_2, #cat_3
{
	padding:5px;	
}

#cv_sp .hidable {
	border-radius: 2px;
	margin: 5px;
	padding-left: 5px; 
	display: block;
	background-color: #D0D0D0;
	width: 400px;
}

#full .hidable {
	border-radius: 2px;
	margin: 5px;
	padding-left: 5px; 
	display: block;
	background-color: #D0D0D0;
	width: 300px;
}

#cvlist li 
{
	min-height:22px; 
	line-height:22px;
}

#cvlist a 
{ 
	text-align: left; 
	line-height:20px; 
	height:20px; 
	font-size:12px; 
	btext-shadow:1px 1px 1px white;
}

#cvlist a ins 
{
	height:20px; 
	width:20px; 
	background-position:-56px -17px;
}

#dialog-form label, input 
{ 
	display:block; 
}

#dialog-form body 
{ 
	font-size: 62.5%; 
}