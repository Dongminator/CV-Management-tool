<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html lang="en">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    {% block head %}
	    <script src="http://code.jquery.com/jquery-1.8.3.js"></script>
	   	<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
	   	<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
	   	<script type="text/javascript" src="/JavaScript/jquery.jstree.js"></script>
	   	<script type="text/javascript" src="/JavaScript/JSONParser.js"></script>
	   	<script type="text/javascript" src="/JavaScript/init.js"></script>
	   	<script type="text/javascript" src="/JavaScript/hierarchy.js"></script>
		<link rel="stylesheet" type="text/css" href="/css/style_div.css">
		<link rel="stylesheet" type="text/css" href="/css/jquery-ui-1.9.2.custom.css">
	    <title>{% block title %}{% endblock %}</title>
    {% endblock %}
</head>
<body>
    <div id="container">
		<div id="main_title"><img src="/img/COMP3001.jpeg">
			<div id="navigation">
				<ul>
					<li class="hrz"><a href="#File">File</a></li>
					<li class="hrz"><a href="#Edit">Edit</a></li>
					<li class="hrz"><a href="#Help">Help</a></li>
					<li class="hrz"><a href="#About">About</a></li>
					<li class="hrz"><a href="#Logout">Log Out</a></li>
				</ul></div>
			</div>
		<div id="workspace">
			<div id="info">
				<div id="profile" class="profile1">
					<div class="title">Profile
						<div style="float:right">
							<ul>
								<li class="hrz"><a href="#Edit" style="width:24px">
								<img src="/img/gear1.jpeg" style="margin-top:1px">
								</a></li>
								<li class="hrz"><a href="#Min" class="button_d" title="toggle size" style="width:24px; height:20px; font-size:10px">
								</a></li>
							</ul>
							</div>
						</div>
					<div id="profile_sp" class="work_sp">
						<div class="top"><img src="/img/profile.jpeg" align="middle"></div>
						<p style="margin-right:10px;margin-top:10px">	
							Name: <br>
							Phone: <br>
							Address: <br>
							Gender: <br>
						</p><br>
					</div>
				</div>
				<div id="cvlist" class="cvlist1">
					<div class="title">CV List
					
					<div style="float:right">
					<a href="#" class="button_d" title="toggle size" style="width:24px; height:20px; font-size:10px"></a>
					</div>
					
					</div>
					<div id="cvlist_sp" class="work_sp">
					
						<!-- Adding -->
						<div id="cvtree">
						</div>
						<!-- Adding -->
					
					</div>
				</div>
			</div>
			<div id="cv" class="cv1">
				<div class="title"><label id="cvnamelabel">Curriculum Vitae</label>
				<div style="float:right">
					<ul>
					<li class="hrz"><select name="cvs" id="cvs" title="Load a CV"></select>
					</li>
					<li class="hrz"><a href="#M" class="button" title="Toggle hide/show all items" style="width:24px; height: 20px; font-size:10px">
					</a></li>
					<li class="hrz"><a href="#add" id="create-cv" title="Create a new CV" style="width:24px; height: 20px; font-size:10px">
					</a></li>
					<li class="hrz"><a href="#Ex" style="width:24px" title="Export to PDF"><img src="/img/pdf1.jpeg" style="margin-top:1px">						
					</a></li>
					<li class="hrz"><a href="#Temp" style="width:24px" title="Select template"><img src="/img/tems1.jpeg" style="margin-top:1px">						
					</a></li>
					</ul>
				</div>
				</div>
				<div id="cv_sp" class="work_sp">
				<!-- Adding -->
				</div>
			</div>
			<div id="full" class="full1">
			
				<div class="title">Resources
				<div style="float:right">
					<ul>
						<li class="hrz"><a href="#" class="button" title="Toggle hide/show all items" toggle="false" style="width:24px; height:20px; font-size:10px">
						</a></li>
						<li class="hrz"><a href="#Edit" id="create-item" title="Create a new item or category" style="width:24px; height:20px; font-size:10px">
						</a></li>
					</ul>
					</div>
				</div>
			
				<div id="full_sp" class="work_sp">
				</div>
			</div>
		</div>
	</div>
	<div id="dialog-form" title="Create new item">
    	<p class="validateTips">All form fields are required.</p>
    	<form>
    		<fieldset>
    		    <label for="category">Category</label>
    			<input type="radio" name="cats" id="first" value="opt1" />
    		    <label for="category" id="oldlabel">Select Existing : </label>
    			<select name="category" id="category"></select>
				<input type="radio" name="cats" id="second" value="opt2" />
				<label for="category" id="newlabel">Create New Category:</label>
        		<input type="text" name="category" id="category1" class="text ui-widget-content ui-corner-all"/>
        		<label for="title">Title</label>
        		<input type="text" name="title" id="title" value="" class="text ui-widget-content ui-corner-all" />
        		<label for="content">Content</label>
        		<input type="text" name="content" id="content" value="" class="text ui-widget-content ui-corner-all" />
    		</fieldset>
    	</form>
	</div>
	
	<div id="dialog-form2" title="Create new CV">
    	<p class="validateTips">All form fields are required.</p>
    	<form>
    		<fieldset>
    		    <label for="category">CV Name:</label>
        		<input type="text" name="cvname" id="cvname" class="text ui-widget-content ui-corner-all"/>
    		</fieldset>
    	</form>
	</div>
</body>