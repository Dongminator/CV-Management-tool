html, body
{
	width:100%;
	height:100%;
	font-family:Arial;
}

table
{
	text-align:center;
	width:100%;
	height:100%;
	border:1px;
	border-style:solid;
	border-color:#C0C0C0;
	margin-left:auto;
	margin-right:auto
}

tr, td
{
	border:1px;
	border-style:solid;
	border-color:#C0C0C0;
}

td.title
{
	height:20px;
	background-color:#D0D0D0;
	font-weight:bold;
	color:white;
	text-align:left;
}

div.full
{
	height:100%;
	width:100%;
	overflow-y:auto;
}

div.top
{
	width:100%;
	text-align:center;
	margin-top:10px;
}

p
{
	margin-top:10px;
	margin-left:10px;
	margin-right:10px;
}

button
{
	background-color:#D0D0D0
}