# Handle login here
import webapp2

from google.appengine.api import users

class LoginPage(webapp2.RequestHandler):
    def get(self):
        self.response.headers['Content-Type'] = 'text/html'
        self.response.write('This is the login page')
        
        #TODO: provide interface for user login

        
        self.response.write('<a href=\"/google_login\">Click here to login with Google Account</a>')
        
        
        
        #TODO: provide interface for user login
class GoogleLogin(webapp2.RequestHandler): 
    def get(self):
        self.redirect(users.create_login_url("/"))      

        
app = webapp2.WSGIApplication(
                              [('/login', LoginPage),
                               ('/google_login', GoogleLogin)],
                              debug=True)